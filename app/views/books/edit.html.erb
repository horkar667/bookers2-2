<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
		    <h1>Editing Book</h1>
        <%= render 'layouts/error_messages', model: @book %>
        <%= form_with model:@book, local:true do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, autofocus: true, id:"inputTitle", class: "form-control book_title" %>
          </div>
          <div class="form-group">
            <%= f.label :opinion %><br>
            <%= f.text_area :body, autofocus: true, id:"inputBody", class: "form-control book_body" %>
          </div>
          <div class="form-group" id="star">
            <%= f.hidden_field :rate, id: :review_star %>
          </div>

          <!-- 評価javascript -->
          <script>
          $('#star').raty({
            size     : 25,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            scoreName: 'book[rate]',
            half: true,
            readOnly: true,
            score: <%= @book.rate %>,
          });
          </script>
          <div class="form-group">
            <%= f.submit "Update Book",class: "btn btn-success" %>
          </div>
        <% end %>
		    <%= link_to "Show", book_path(@book) %> |
		    <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>