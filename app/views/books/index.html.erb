<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <%= render 'layouts/searches' %>
    <div class="row">
      <div class="col-md-3">
        <%= render "layouts/user_info", user: @user %>
        <div class="row">
          <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
        <%= render 'layouts/error_messages', model: @book %>
        <h2 class="mt-3">New book</h2>
        <%= render "books/form", book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user.id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
                <td class="favorite-button_<%= book.id %>">
                 <%= render "favorites/favorite", book: book %>
                </td>
                <td>コメント数：<%= book.book_comments.count %></td>
                <!--星評価-->
                <td><div id="star-rate-<%= book.id %>"></div></td>
                <script>
                $('#star-rate-<%= book.id %>').raty({
                  size: 36,
                  starOff:  '<%= asset_path('star-off.png') %>',
                  starOn : '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  half: true,
                  readOnly: true,
                  score: <%= book.rate %>,
                });
                </script>
                <!--/星評価-->
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>