<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <%= render 'layouts/searches' %>
    <div class="row">
      <div class="col-md-3">
        <%= render "layouts/user_info", user: @user %>
        <div class="row">
          <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= render "layouts/edit", book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
  		  <tbody>
  		    <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
                <br><%= @user.name %>
              <% end %>
            </td>
            <td><%= @book_show.title %></td>
            <td><%= @book_show.body %></td>
            <td>
              <% if @book_show.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorites_path(@book_show), method: :delete do %>
                    <i class="fas fa-heart" style="color: red;"><%= @book_show.favorites.count %></i>
                  <% end %>
                </p>
                <% else %>
                <p>
                  <%= link_to book_favorites_path(@book_show), method: :post do %>
                    <i class="fas fa-heart"><%= @book_show.favorites.count %></i>
                  <% end %>
                </p>
              <% end %>
            </td>
            <td>コメント数：<%= @book_show.book_comments.count %></td>
            <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book_show), class: "btn btn-sm btn-success"%></td>
              <td><%= link_to "Destroy", "/books/#{@book_show.id}", method: :delete, class: "btn btn-sm btn-danger", data: {confirm: "本当に削除しますか？"} %></td>
            <% end %>
            </tr>
          </tbody>
        </table>
        <div class="comments">
          <% @book_show.book_comments.each do |book_comment| %>
            <table class="table-comments">
              <thead>
                <tr>
                  <th>
                    <%= link_to user_path(book_comment.user) do %>
                     <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %><br>
                     <%= book_comment.user.name %>
                    <% end %>
                  </th>
                  <th>
                    <%= book_comment.comment %>
                  </th>
                  <th>
                    <% if book_comment.user == current_user %>
                      <div class="comment-delete">
                        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: "btn btn-sm btn-danger", method: :delete, data: {confirm: "本当に削除しますか？"} %>
                      </div>
                    <% end %>
                  </th>
                </tr>
              </thead>
            </table>
          <% end %>
        </div>
        <div class= "new-comment">
          <%= form_with(model:[@book_show, @comment], local: true) do |f| %>
            <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" , class: "new-comment" %>
            <%= f.submit "送信" %>
          <% end %>
        </div>
        </div>
    </div>
  </div>
</main>