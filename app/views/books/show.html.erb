<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render "layouts/user_info", user: @user %>
        <div class="row">
          <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= render "layouts/edit", book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
  		  <tbody>
  		    <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
                <br><%= @user.name %>
              <% end %>
            </td>
            <td><%= @book_show.title %></td>
            <td><%= @book_show.body %></td>
            <td>
              <% if @book_show.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorites_path(@book_show), method: :delete do %>
                    <i class="fas fa-heart" style="color: red;"><%= @book_show.favorites.count %></i>
                  <% end %>
                </p>
                <% else %>
                <p>
                  <%= link_to book_favorites_path(@book_show), method: :post do %>
                    <i class="fas fa-heart"><%= @book_show.favorites.count %></i>
                  <% end %>
                </p>
              <% end %>
            </td>
            <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book_show), class: "btn btn-sm btn-success"%></td>
              <td><%= link_to "Destroy", "/books/#{@book_show.id}", method: :delete, class: "btn btn-sm btn-danger", data: {confirm: "本当に削除しますか？"} %></td>
            <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>