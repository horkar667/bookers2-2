<% if user.is_followed_by?(current_user) %>
  <%= link_to "フォロー外す", user_relationships_path(user), class: "btn btn btn-danger mb-3", method: :delete, remote: true %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user), class: "btn btn btn-primary mb-3", method: :post, remote: true %>
<% end %>