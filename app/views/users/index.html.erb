<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <%= render 'layouts/searches' %>
    <div class="row">
      <div class="col-md-3">
        <%= render "layouts/user_info", user: @user %>
        <div class="row">
          <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= render "layouts/edit", book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
                <td><%= user.name %></td>
                <td>フォロー数:<%= user.followings.count %></td>
                <td>フォロワー数<%= user.followers.count %></td>
                <td>
                  <% if current_user != user %>
                    <% if user.is_followed_by?(current_user) %>
                      <%= link_to "フォロー外す", user_relationships_path(user), method: :delete %>
                    <% else %>
                      <%= link_to "フォローする", user_relationships_path(user), method: :post %>
                    <% end %>
                  <% end %>
                </td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
